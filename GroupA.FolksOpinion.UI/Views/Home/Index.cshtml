@{
    ViewBag.Title = "Home Page";
}

@Scripts.Render("~/Scripts/map.js")
@Scripts.Render("~/Scripts/main.js")

@Styles.Render("~/Content/main.css")

<div id="mapContainer">
    <canvas id="map"></canvas>
</div>

<div id="hashtagSelectionSidebar">
    <h1>Folk's<br />Opinion</h1>
    <div id="separator"></div>
    <table>
        <tr><td><input type="search" id="searchTwi" placeholder="Enter search term/hashtag" /></td></tr>
        <tr><td><input type="submit" onclick="SearchbtnonClick()"></td></tr>
    </table>
    <img src="~/Content/Images/process.gif" alt="process gif" id="process" />
    <h2>Click a top trending<br />hashtag to analysis it.</h2>
    <ol id="hashtags">
        <li>cats</li>
        <li>dogs</li>
        <li>fish</li>
        <li>rabbits</li>
    </ol>
    <ul id="modalLinks">
        <li>about</li>
        <li>help</li>
    </ul>
    <input type="text" id="customSearchTerm" onkeypress="customSearchTerm(event)" />
    <img src="~/Content/Images/closeHashtagSelectionSidebarButton.png" alt="Close Sidebar" id="closeHashtagSelectionSidebarButton" />
</div>

<img src="~/Content/Images/openHashtagSelectionSidebarButton.png" alt="Open Sidebar" id="openHashtagSelectionSidebarButton" />
<img src="~/Content/Images/optionsButton.png" alt="Options" id="optionsButton" />

<div id="aboutModalBox" class="modalBox">
    <h1>About</h1>
    <div class="separator"></div>
    <p>About content.</p>
</div>
<div id="helpModalBox" class="modalBox">
    <h1>Help</h1>
    <div class="separator"></div>
    <p>Help content.</p>
</div>
<div id="optionsModalBox" class="modalBox">
    <h1>Colour Scheme</h1>
    <div class="separator"></div>
</div>
